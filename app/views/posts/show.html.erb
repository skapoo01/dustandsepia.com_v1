<h1><%= @post.title %></h1>
<p>By <%= @post.author %> on <%= @post.composed_on%></p>

<% if (@post.cover_image.file?) %>
   <%= image_tag @post.cover_image.url(:medium) %>
<% end %>

<p><%= @post.body %></p>

<%= button_to 'Edit', edit_post_path(@post), :method => "get" %>
<%= button_to 'Back', posts_path, :method => "get" %>

